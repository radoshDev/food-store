---
type Props = {
	title: string
	checked: boolean
	id: string
}
const { checked, id, title } = Astro.props
---

<div class="card_tab">
	<input type="radio" name="tabs" id={id} checked={checked} />
	<label for={id} class="title">{title}</label>
	<span class="line"></span>
</div>

<style lang="scss">
	@import '../../../../styles/variables.scss';
	.card_tab {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-top: 2.8rem;
		input {
			display: none;
			&:checked {
				& ~ .title {
					color: $title-color;
				}
				& ~ .line {
					background-color: $light-green;
				}
			}
		}
		.title {
			font-weight: 500;
			margin-bottom: 2.5rem;
			cursor: pointer;
		}
		.line {
			display: inline-block;
			height: 3px;
			width: 92%;
			background-color: transparent;
			margin-bottom: -2px;
		}
	}
</style>
