---
import Card from './Card/Card.astro'
import { Picture } from '@astrojs/image/components'
import bgImg from '@/assets/menu_card.jpg'
---

<div class="section_menu_card">
	<div class="container content">
		<h2 class="title">
			Check out our list of cuisines by our great chefs. Choose among our
			a-la-carte services.
		</h2>
		<Card />
	</div>
	<Picture
		class="bg_image"
		src={bgImg}
		widths={[1920]}
		alt="foods in the table"
	/>
	<picture class="test"></picture>
</div>

<style lang="scss">
	.section_menu_card {
		background-color: gray;
		padding: 13rem 0 10.8rem;
		position: relative;
		.content {
			position: relative;
			z-index: 2;
			.title {
				font-weight: 500;
				font-size: 3.4rem;
				text-align: center;
				letter-spacing: 0.01em;
				color: #fff;
				max-width: 83rem;
				margin: 0 auto 5.5rem;
			}
		}
		.bg_image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 0;
		}
	}
</style>
