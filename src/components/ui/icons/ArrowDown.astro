---
type Props = { direction?: 'top' | 'left' | 'right' }
const { direction } = Astro.props

let rotateDeg = 0
if (direction === 'right') rotateDeg = -90
if (direction === 'left') rotateDeg = 90
if (direction === 'top') rotateDeg = 180
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	width={11}
	height={7}
	fill="none"
	style={{ rotate: `${rotateDeg}deg`, verticalAlign: 'middle' }}>
	<path
		fill="#fff"
		fill-rule="evenodd"
		d="M5.53 6.695 1.208 2.459A.91.91 0 1 1 2.481 1.16l3.023 2.964L8.467 1.1a.91.91 0 0 1 1.299 1.273L5.53 6.695Z"
		clip-rule="evenodd"></path>
</svg>
